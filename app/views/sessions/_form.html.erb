<%= form_for :session, url: session_path do |form| %>
  <div class="m-2 email-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: 'mb-1 form-control' %>
  </div>

  <div class="m-2 password-field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'mb-1 form-control' %>
  </div>

  <div class="m-2 row">
    <div class = 'text-center'>
      <%= form.submit "Sign in", class: "mt-2 btn btn-primary" %>
    </div>
  </div>

<p>
  <div class="m-2 mb-4 other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: "mt-2 btn btn-warning" %>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path, class: "mt-2 btn btn-warning" %>
  </div>
</p>
<% end %>
