<%= form_with(model: url) do |form| %>
  <% if url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
        <% url.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">      
    <div class="col-sm-10" style="padding: 10px">
      <%= form.text_field :long_url, class: 'mb-1 form-control' %>
    </div>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id.to_i %>

  <div class="actions">
    <%= form.submit "Save URL", class: "mt-2 btn btn-primary btn-lg" %>
  </div>
<% end %>
